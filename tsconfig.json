{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",

    "outDir": "lib",
    "rootDir": ".",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "."
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "lib", "dist"
  ],
  "include": [
    "index.tsx",
    "./modules/*",
    "custom.d.ts"
, "modules/customeFormats/image.js", "modules/customeFormats/syntax.js"  ]
}
